---

<Layout title="HTB Achievements" description="A collection of my HackTheBox achievements and milestones.">
  <Container>
    <div class="space-y-10">
      <div class="flex items-center justify-between">
        <div class="flex flex-col gap-1">
          <h1 class="font-serif text-4xl">HTB Achievements</h1>
          <p class="text-muted-foreground">
            A collection of my HackTheBox achievements and milestones.
          </p>
        </div>
      </div>

      <!-- Filter Component with Client-Side Interactivity -->
      <HTBFilter client:load items={htbItems} />
    </div>
  </Container>
</Layout>
